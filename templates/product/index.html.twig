{% extends 'base.html.twig' %}

{% block title %}Nos produits - La Boutique Française{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-3">
            <h2>Filtrer</h2>
            {{ form(form) }}
        </div>
        <div class="col-md-9">
            <h2>Nos produits</h2>

            <div class="row product-container">
                {% for product in products %}
                    <div class="col-md-4">
                        <div class="product-item text-center">
                            <a href="{{ path('product',{ 'slug' : product.slug}) }}"><img src="/uploads/{{ product.illustration }}" alt="{{ product.name }}" class="img-fluid"></a>
                            <h5>{{ product.name }}</h5>
                            <span class="product-subtittle"> {{ product.subtittle }} </span>
                            <span class="product-price"> {{ (product.price / 100) |number_format(2, ',', '.') }} €</span>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
    
{% endblock %}

{% block footer %}
    <footer class="footer-custom">
                <p>
                    &copy; 2020-2022 La Boutique Française</br>
                    <small>La boutique 100% made in France</br> 
                        <a href="#">Privacy</a> &middot; <a href="#">Terms</a></small>
                </p>
            </footer>
{% endblock %}
