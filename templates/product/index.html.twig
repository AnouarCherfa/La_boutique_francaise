        <div class="col-md-3">
            <h2>Filtrer</h2>
            {{ form(form) }}
        </div>
        <div class="col-md-9">
            <h2>Nos produits</h2>

            <div class="row product-container">
                {% for product in products %}
                    <div class="col-md-4">
                       {% include "product/single_product.html.twig" %}
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
    
{% endblock %}

