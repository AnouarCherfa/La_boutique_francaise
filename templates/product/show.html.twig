{% extends 'base.html.twig' %}

{% block title %}{{ product.name }} - La Boutique Française{% endblock %}

{% block content %}
    
    <div class="row">
        <div class="col-md-5">
            <img src="/uploads/{{ product.illustration }}" alt="{{ product.name }}" class="img-fluid">
        </div>
        <div class="col-md-7 my-auto">
            <h3>{{ product.name }}</h3>
            <p>{{ product.subtittle }}</p>
            <span class="product-page-price">{{ (product.price / 100) |number_format(2, ',', '.') }} €</span> 
            <hr>
            <p>
                {{ product.description }}
            </p>
            <a href=""class="btn btn-primary">Ajouter au panier</a>
        </div>
    </div>

{% endblock %}

{% block footer %}
    <footer class="footer-login-inscription">
                <p>
                    &copy; 2020-2022 La Boutique Française</br>
                    <small>La boutique 100% made in France</br> 
                        <a href="#">Privacy</a> &middot; <a href="#">Terms</a></small>
                </p>
            </footer>
{% endblock %}